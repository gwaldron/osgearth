#ifndef OSGEARTH_TILE_NODE_H
#define OSGEARTH_TILE_NODE_H 1

#include <osgEarth/Common>
#include <osgEarth/TileKey>
#include <osg/MatrixTransform>
#include <osg/Texture>

namespace osgEarth
{
    class /*header-only*/ TileNode : public osg::MatrixTransform
    {
    public:
        virtual const TileKey& getKey() const =0;

        virtual osg::Texture* getElevationTexture() const =0;

        virtual osg::Matrix& getElevationTextureMatrix() const =0;
    };
};

#endif // OSGEARTH_TILE_NODE_H