<!--
osgEarth Sample
This shows how to label point features with an attribute.
-->

<map name="Labels Demo">

    <xi:include href="readymap_imagery.xml"/>
    <xi:include href="readymap_elevation.xml"/>
    
    <TiledFeatureModel name="Major cities" features="data:omt">
        <min_level>8</min_level>
        <max_level>8</max_level>
        <styles>
            <style type="text/css"><![CDATA[
                city {
					select: (feature.properties.mvt_layer === "place") && 
							(feature.properties.class === "city") &&
							(feature.properties.rank <= 7);
					text-simple: true;
                    text-content: feature.properties.name;
					text-size: 26;
					text-halo: #333333;
					render-depth-test: false;
                }
			]]></style>
		</styles>
	</TiledFeatureModel>
  
	<XYZFeatures name="data:omt">
        <url>https://readymap.org/readymap/mbtiles/osm-openmaptiles/{z}/{x}/{-y}.pbf</url>
        <profile>spherical-mercator</profile>
        <format>pbf</format>
        <min_level>0</min_level>
        <max_level>14</max_level>
    </XYZFeatures>
</map>
