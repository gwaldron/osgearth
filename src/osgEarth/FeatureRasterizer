#ifndef OSGEARTH_FEATURE_RASTERIZER
#define OSGEARTH_FEATURE_RASTERIZER 1

#include <osgEarth/StyleSheet>
#include <osgEarth/Session>
#include <osgEarth/Feature>

namespace osgEarth
{
    namespace Util
    {
        class OSGEARTH_EXPORT FeatureRasterizer
        {
        public:
            FeatureRasterizer(unsigned int width, unsigned int height, const GeoExtent& extent, const Color& backgroundColor = Color::Transparent);

            void render(
                Session* session,
                const Style& style,
                const FeatureProfile* profile,
                const FeatureList& in_features) const;

            osg::Image* finalize();

        private:
            GeoExtent _extent;
            osg::ref_ptr< osg::Image > _image;
        };
    }
}


#endif
