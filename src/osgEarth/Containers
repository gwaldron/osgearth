#ifndef OSGEARTH_CONTAINERS_H
#define OSGEARTH_CONTAINERS_H 1

#include <osgEarth/Common>
#include <osgEarth/Threading>
#include <osg/ref_ptr>
#include <osg/observer_ptr>
