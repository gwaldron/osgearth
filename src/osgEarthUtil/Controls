        virtual void draw( const ControlContext& cx );

    protected:
        virtual bool handle( const osgGA::GUIEventAdapter& ea, osgGA::GUIActionAdapter& aa, ControlContext& cx );

        virtual void fireValueChanged( ControlEventHandler* one =0L );

    private:
