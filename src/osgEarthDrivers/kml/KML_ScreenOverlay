#ifndef OSGEARTH_DRIVER_KML_KML_SCREENOVERLAY
#define OSGEARTH_DRIVER_KML_KML_SCREENOVERLAY 1

#include "KML_Common"
#include "KML_Overlay"

namespace osgEarth_kml
{
    using namespace osgEarth;

    struct KML_ScreenOverlay : public KML_Overlay
    {
        virtual void scan( xml_node<>* node, KMLContext& cx );
        virtual void build( xml_node<>* node, KMLContext& cx );
    };

} // namespace osgEarth_kml

#endif // OSGEARTH_DRIVER_KML_KML_SCREENOVERLAY
