<!--
osgEarth Sample
This shows how to label point features with an attribute.
-->

<map name="Feature Geometry Demo" type="geocentric" version="2">
    
    <options lighting="false"/>
    
    <image name="world" driver="gdal">
        <url>../data/world.tif</url>
    </image>
    
    <!-- use the "feature_label" driver to generate labels -->
    <model name="cities" driver="feature_label">

        <!-- Configure the OGR feature driver to read the shapefile -->
        <features name="cities" driver="ogr">
            <url>../data/world.shp</url>
        </features>

        <!-- Appearance details. Note the use of [...] to fetch an attribute value. -->
        <styles>
            <style type="text/css">              
                cities {
                   stroke: #ffff00;
                   text-halo: #000000;
                   text-font: arial.ttf;
                   text-size: 18;
				   text-rotate-to-screen: true;
                   text-remove-duplicate-labels: true;
				   text-content: [cntry_name];
                }     
            </style>
        </styles>
        
    </model>
  
</map>
