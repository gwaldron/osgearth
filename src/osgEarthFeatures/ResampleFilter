#ifndef OSGEARTHFEATURES_RESAMPLE_FILTER_H
#define OSGEARTHFEATURES_RESAMPLE_FILTER_H 1

#include <osgEarthFeatures/Common>
#include <osgEarthFeatures/Feature>
#include <osgEarthFeatures/Filter>
#include <osg/Geode>

using namespace osgEarth;

namespace osgEarth { namespace Features
{
    /**
     * This filter will resample line segments so they are between
     * the min and max specified length.
     */
    class OSGEARTHFEATURES_EXPORT ResampleFilter : public FeatureFilter
    {
    public:
        // Call this determine whether this filter is available.
        static bool isSupported();

    public:
        ResampleFilter();
        ResampleFilter( double minLength, double maxLength );

    public:

        double minLength() const { return _minLen; }
        double& minLength() { return _minLen; }

        double maxLength() const { return _maxLen; }
        double& maxLength() { return _maxLen; }

        double perturbationThreshold() const { return _perturbThresh; }
        double& perturbationThreshold() { return _perturbThresh; }

    public:
        virtual FilterContext push( FeatureList& input, const FilterContext& context );

    protected:
        double _minLen, _maxLen;
        double _perturbThresh;

        bool push( Feature* input, const FilterContext& context );
    };

} } // namespace osgEarth::Features

#endif // OSGEARTHFEATURES_RESAMPLE_FILTER_H
